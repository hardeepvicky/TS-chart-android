<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.co.sevenrocks.tschart">

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="in.co.sevenrocks.tschart.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="in.co.sevenrocks.tschart.CompanyLoginActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name="in.co.sevenrocks.tschart.LoginActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name="in.co.sevenrocks.tschart.MenuActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="in.co.sevenrocks.tschart.ChartActivity">
        </activity>

    </application>

</manifest>
